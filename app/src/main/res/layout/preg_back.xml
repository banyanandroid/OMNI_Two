<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/gingerimg"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:src="@drawable/frag3_gingerimg"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/gold_img"
        android:layout_alignStart="@+id/gold_img" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/gold_img"
        android:scaleType="fitXY"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/frag7_imggold"
        android:layout_below="@+id/gingerimg" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/logo_img"
        android:layout_marginRight="45dp"
        android:src="@drawable/logo"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp" />

    <!--<ImageView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/frag6_imgtable"
        android:layout_below="@+id/logo_img"
        android:layout_alignLeft="@+id/logo_img"
        android:layout_alignStart="@+id/logo_img"
        android:src="@drawable/logo_txt" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/red"
        android:text="The Multi mode Protector"
        android:id="@+id/logo_txt"
        android:layout_marginLeft="-5dp"
        android:layout_below="@+id/logo_img"
        android:layout_alignLeft="@+id/logo_img"
        android:layout_alignStart="@+id/logo_img" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/omni_txt"
        android:layout_marginRight="-30dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/omni_img"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/logo_txt"
        android:layout_alignEnd="@+id/logo_txt" />

    <include layout="@layout/s_back"></include>


</RelativeLayout>