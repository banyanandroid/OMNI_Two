<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="Fragments.Fragment_7">

    <include layout="@layout/s_back"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/logo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/logo_img"
            android:layout_alignStart="@+id/logo_img"
            android:layout_below="@+id/logo_img"
            android:text="The Multi mode Protector"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/omni_txt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/logo_txt"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/logo_txt"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="-30dp"
            android:src="@drawable/omni_img" />

        <TextView
            android:layout_width="600dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Efficacy of Ginger is established through RCTs"
            android:id="@+id/textView"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/logo_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="135dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView28"
            android:padding="1dp"
            android:layout_marginTop="3dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="109dp"
            android:src="@drawable/lay7_linkimg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView41"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/imageView28"
            android:layout_alignStart="@+id/imageView28"
            android:src="@drawable/frag8_img"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_above="@+id/omni_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="RCT = randomized controlled trial. * Extract flavor may have unmasked trial. Extract is approximately 12 times more concentrated than dried powder ginger. † Means and standard deviations for daily nausea scores given in graphic form. ‡ “Significant” decrease was a change in nausea rank (e.g., severe, moderate, mild, none). § Syrup flavor may have unmasked trial. ∥No statistical analysis was performed because of small sample size. ¶ Baseline vomiting frequency in the two groups was not stated. Information from references 1 through 6."
            android:id="@+id/textView41"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginRight="160dp"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/omni_txt"
            android:layout_toRightOf="@+id/imageView28"
            android:layout_toEndOf="@+id/imageView28" />


    </RelativeLayout>

</FrameLayout>
